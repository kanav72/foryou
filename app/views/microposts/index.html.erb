<p style="color: green"><%= notice %></p>

<h1>Microposts</h1>

<div id="microposts">
  <% @microposts.each do |micropost| %>
    <%= render micropost %>
    <p>
      <%= link_to "Show this micropost", micropost %>
      <%= button_to "Delete this micropost", micropost, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New micropost", new_micropost_path %>
